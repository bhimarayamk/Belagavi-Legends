<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@color/purple2">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circlebackground"/>

    <TextView
        android:id="@+id/popUpkm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Km"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are glad that you are here!! Belagavi is a place easy to navigate and we hope you have a wonderful time with our legend birth places! \n Thank You"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="9dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:background="@color/orange"
            android:drawableTop="@drawable/ic_baseline_directions_car_24"
            android:gravity="center"
            android:padding="10dp"
            android:text="Rs200-300"
            android:textColor="#212121"
            android:textSize="15dp" />

        <TextView
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:background="@color/green"
            android:drawableTop="@drawable/ic_baseline_directions_walk_24"
            android:gravity="center"
            android:padding="10dp"
            android:text="Rs 0"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/busCost"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@color/pink"
            android:text="42Rs"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:drawableTop="@drawable/ic_baseline_directions_bus_24"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnUber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25px"
        android:text="Video"/>

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25px"
        android:text="Check Maps"
        app:backgroundTint="#C81515" />

</LinearLayout>